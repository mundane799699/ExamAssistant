<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mundane.examassistant.ui.activity.SettingActivity">

    <include layout="@layout/activity_main_title"/>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/gray_efefef"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/app_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="题库助手"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_horizontal"
                    android:text="带你飞哼"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_answer_right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="答对后自动翻页"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_answer_right_delay_time"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="不翻页"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:background="@color/gray_efefef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/ll_answer_right_remove"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="错题答对后自动移除"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_answer_right_remove"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="3次"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:background="@color/gray_efefef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:id="@+id/ll_flip_page"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="开挂模式下自动翻页"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_flip_page"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="3秒"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:background="@color/gray_efefef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:id="@+id/ll_clear_all_data"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="清空所有答题数据"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                    />

            </LinearLayout>

            <View
                android:background="#99dfdfdf"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <LinearLayout
                android:id="@+id/ll_about_me"
                android:background="#aaefefef"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="关于我"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_arrow_enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:background="#dfdfdf"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/ll_share"
                android:background="#aaefefef"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="分享给朋友"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_arrow_enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:background="#99dfdfdf"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
